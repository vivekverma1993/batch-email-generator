# =============================================
# Docker Environment Configuration
# =============================================
# Copy this file to .env and update with your settings

# =============================================
# OpenAI Configuration (REQUIRED for AI features)
# =============================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================
# Database Configuration (Docker defaults)
# =============================================
# These values match docker-compose.yml
DB_HOST=postgres
DB_PORT=5432
DB_NAME=email_generator
DB_USER=email_user
DB_PASSWORD=secure_email_password_123

# =============================================
# Email Processing Configuration
# =============================================
BATCH_SIZE=100
MAX_BATCH_SIZE=1000
MAX_CSV_ROWS=50000
INTELLIGENCE_BATCH_SIZE=5

# AI Settings
AI_FALLBACK_TO_TEMPLATE=true
AI_MAX_RETRIES=2
MAX_TOKENS_PER_EMAIL=500

# =============================================
# Server Configuration
# =============================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# =============================================
# Database Connection Pool Settings
# =============================================
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Database Debugging (set to true for SQL logging)
DB_ECHO=false
DB_ECHO_POOL=false

# =============================================
# Docker-specific Settings
# =============================================
# Skip database initialization if already done
SKIP_DB_INIT=false

# Container timezone
TZ=UTC
